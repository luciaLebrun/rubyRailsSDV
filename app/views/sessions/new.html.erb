<h1>Login</h1>
<%= form_with url: login_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<%= link_to 'Create an Account', register_path, class: 'btn btn-primary' %>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>
